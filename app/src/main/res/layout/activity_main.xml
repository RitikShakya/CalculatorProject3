<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/answer"
        android:gravity="center|end"
        android:textSize="50dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/equation"
        android:gravity="center|end"
        android:textSize="50dp"


      />


    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rowCount="5"
        app:columnCount="4"
        >


        <Button
            android:id="@+id/acbtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="A C"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="0"
            app:layout_column="0"
            android:layout_margin="1dp"

            />
        <Button
            android:id="@+id/delbtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="del"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="0"
            app:layout_column="1"
            android:layout_margin="1dp"
            />
        <Button
            android:id="@+id/dividebtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="/"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="0"
            app:layout_column="2"
            />
        <Button
            android:id="@+id/subbtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_rowWeight="1"

            android:text="-"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_column="3"
            />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="9"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="1"
            app:layout_column="2"
            />
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="8"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="1"
            app:layout_column="1"
            />
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="7"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="1"
            app:layout_column="0"
            />
        <Button
            android:id="@+id/multibtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="*"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="0"
            app:layout_column="3"
            />

        <Button
            android:id="@+id/addbtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="+"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="2"
            app:layout_column="3"
            />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="6"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="2"
            app:layout_column="2"
            />
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="5"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="2"
            app:layout_column="1"
            />


        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="4"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="2"
            app:layout_column="0"
            />



        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="3"
            app:layout_column="2"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="3"
            app:layout_column="1"
            />


        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="3"
            app:layout_column="0"
            />
        <Button
            android:id="@+id/equalbtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="="
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="3"
            app:layout_column="3"
            app:layout_rowSpan="2"
            android:layout_margin="1dp"

            />
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="4"
            app:layout_column="1"
            app:layout_columnSpan="2"
            />


        <Button
            android:id="@+id/btndot"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:text="."
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="4"
            app:layout_column="0"
            />




    </androidx.gridlayout.widget.GridLayout>


</LinearLayout>